{% extends 'PartnerBundle::base.html.twig' %}

{% block head_title %}PartnerTC | Вход в личный кабинет{% endblock %}

{% block body_class %}hold-transition login-page{% endblock %}

{% block _body %}
    <div class="login-box">
        <div class="login-logo">
            <a href="{{ path('partner/homepage') }}"><b>Partner</b>TC</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Вход в личный кабинет</p>
            <form  method="post" action="{{ path('partner/login_check') }}" >
                <div class="form-group has-feedback">
                    {% set flash = app.session.flashbag.get('reg_user_name') %}
                    <input type="text" class="form-control" placeholder="Ваш номер мобильного телефона" name="_username" value="{% if flash|length > 0 %}{{ flash[0] }}{% endif %}">
                    <span class="fa fa-mobile-phone form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Пароль" name="_password">
                    <span class="fa fa-lock form-control-feedback"></span>
                </div>
                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Войти в личный кабинет</button>
                    </div><!-- /.col -->
                </div>
            </form>
            <a href="{{ path('partner/recover') }}">Восстановление пароля</a><br>
            <a href="{{ path('partner/register') }}" class="text-center">Зарегистрироваться</a>
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
{% endblock %}
