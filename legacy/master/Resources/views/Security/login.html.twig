{% extends 'MasterBundle::base.html.twig' %}

{% block head_title %}TragetCall | Вход в личный кабинет{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ static_host }}plugins/iCheck/square/blue.css">
{% endblock %}
		
{% block body_class %}hold-transition login-page{% endblock %}

{% block _body %}
    <div class="login-box">
        <div class="login-logo">
            <a href="{{ path('master/homepage') }}"><b>Target</b>Call</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Вход в личный кабинет</p>
            <form  method="post" action="{{ path('master/login_check') }}" >
                <div class="form-group has-feedback">
                    {% set flash = app.session.flashbag.get('reg_user_name') %}
                    <input type="text" class="form-control" placeholder="Ваш номер мобильного телефона" name="_username" value="{% if flash|length > 0 %}{{ flash[0] }}{% endif %}">
                    <span class="fa fa-mobile-phone form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Пароль" name="_password">
                    <span class="fa fa-lock form-control-feedback"></span>
                </div>
                <div class="form-group">
                    <div>
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Войти в личный кабинет</button>
                    </div><!-- /.col -->
                </div>
            </form>
            <a href="{{ path('master/recover') }}">Восстановление пароля</a><br>
            <a href="{{ path('master/register') }}" class="text-center">Зарегистрироваться</a>
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
{% endblock %}

{% block javascripts %}
    <!-- jQuery 2.1.4 -->
    <script src="{{ static_host }}plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="{{ static_host }}bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="{{ static_host }}plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
{% endblock %}