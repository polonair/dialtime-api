{% extends 'AdminBundle::base.html.twig' %}

{% block head_title %}Log in{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ static_host }}plugins/iCheck/square/blue.css">
{% endblock %}
		
{% block body_class %}hold-transition login-page{% endblock %}

{% block _body %}
    <div class="login-box">
        <div class="login-logo"><a href=""><b>Admin</b>TC</a></div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Войдите чтобы начать работу</p>
            <form  method="post" action="{{ path('admin/login_check') }}" >
                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Email" name="_username">
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" name="_password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <div class="checkbox icheck">
                            <label><input type="checkbox"> Remember Me</label>
                        </div>
                    </div><!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                    </div><!-- /.col -->
                </div>
            </form>
            <a href="#">I forgot my password</a><br>
            <a href="register.html" class="text-center">Register a new membership</a>
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
{% endblock %}

{% block javascripts %}
    <!-- jQuery 2.1.4 -->
    <script src="{{ static_host }}plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="{{ static_host }}bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="{{ static_host }}plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
{% endblock %}