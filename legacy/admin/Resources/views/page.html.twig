{% extends 'AdminBundle::base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ static_host }}dist/css/skins/skin-red.min.css">
{% endblock %}

{% block body_class %}hold-transition skin-red sidebar-mini{% endblock %}

{% block _body %}
	<div class="wrapper">
		{% include 'AdminBundle:Common:_main_header.html.twig' %}
		{% include 'AdminBundle:Common:_main_sidebar.html.twig' %}
		<div class="content-wrapper">
			<section class="content-header">
				{% block content_header %}{% endblock %}
			</section>
			<section class="content">
				{% block content %}{% endblock %}
			</section><!-- /.content -->
		</div>
		{% include 'AdminBundle:Common:_main_footer.html.twig' %}
		{#% include 'AdminBundle:Common:_control_sidebar.html.twig' %#}
	</div>
{% endblock %}
