{% extends 'AdminBundle::page.html.twig' %}

{% block head_title %}AdminLTE 2 | Blank Page{% endblock %}

{% block content_header %}
	<h1>
		Управление категориями
		<small>it all starts here</small>
	</h1>
	<ol class="breadcrumb">
		<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
		<li><a href="#">Examples</a></li>
		<li class="active">Blank page</li>
	</ol>
{% endblock %}

{% block content %}
	<div class="nav-tabs-custom">
		<ul class="nav nav-tabs">
			<li class="active"><a href="{{ path('admin/parameters') }}"><i class="fa fa-list"></i> Список параметров</a></li>
			<li class=""><a href="{{ path('admin/parameter/add') }}"><i class="fa fa-plus"></i> Добавить параметр</a></li>
		</ul>
		<div class="tab-content">
			<ul>
				{% for parameter in parameters %}
					<li>#{{ parameter.id }}: {{ parameter.name }} = <form class="form-inline" action="{{ path('admin/parameter/edit', {'id':  parameter.id }) }}" method="post"><input type="text" name="value" value="{{ parameter.value }}"><button type="submit">Save</button></form></li>
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}
