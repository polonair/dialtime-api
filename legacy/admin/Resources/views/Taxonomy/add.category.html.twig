{% extends 'AdminBundle::page.html.twig' %}

{% block head_title %}AdminLTE 2 | Blank Page{% endblock %}

{% block content_header %}
	<h1>
		Управление категориями
		<small>it all starts here</small>
	</h1>
	<ol class="breadcrumb">
		<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
		<li><a href="#">Examples</a></li>
		<li class="active">Blank page</li>
	</ol>
{% endblock %}

{% block content %}
	<div class="nav-tabs-custom">
		<ul class="nav nav-tabs">
			<li class=""><a href="{{ path('admin/categories') }}"><i class="fa fa-list"></i> Список категорий</a></li>
			<li class="active"><a href=""><i class="fa fa-plus"></i> Добавить категорию</a></li>
		</ul>
		<div class="tab-content">
			<form method="post" action="{{ path('admin/category/add') }}" >
				<input type="text" name="name" />
				<textarea name="description"></textarea>
				<select name="parent">
					<option value="0">-</option>
					{% for category in categories %}
						<option value="{{category.id}}">{{category.name}}</option>
					{% endfor %}
				</select>
				<input type="submit" />
			</form>
		</div>
	</div>
{% endblock %}
